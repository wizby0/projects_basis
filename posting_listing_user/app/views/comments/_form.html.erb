<%= form_for([@wall, @wall.comments.build]) do |f| %>
  <p>
    <%= f.label :commenter %><br>
    <%= f.text_field :commenter %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit "+", class: "glyphicon glyphicon-arrow-left btn btn-lg btn-default" %>
  </p>
<% end %>

